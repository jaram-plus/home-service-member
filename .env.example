# Environment (development, testing, production)
APP_ENV=development

# Database
DATABASE_URL=sqlite:///./jaram.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key (IMPORTANT: Change this in production!)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# MinIO (development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=jaram-profiles
MINIO_SECURE=false

# Cloudflare R2 (production) - set these in production
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_BUCKET_NAME=jaram-profiles

# Email Service - Configure your provider
# EMAIL_API_KEY=your-email-api-key
# EMAIL_FROM=noreply@jaram.org

# CORS
FRONTEND_URL=http://localhost:3000
